{
  "width": 200,
  "height": 100,
  "padding": {"top": 10, "left": 30, "bottom": 50, "right": 30},

  "data": [
    {
      "name": "table",
      "values": [
        {"category":"Easy", "amount":62},
        {"category":" ", "amount":26},
        {"category":"Not Easy", "amount":16},
        {"category":"  ", "amount":3},
        {"category":"Impossible", "amount":2}
      ]
    }
  ],

  "signals": [
    {
      "name": "tooltip",
      "init": {},
      "streams": [
        {"type": "rect:mouseover", "expr": "datum"},
        {"type": "rect:mouseout", "expr": "{}"}
      ]
    }
  ],

  "predicates": [
    {
      "name": "tooltip", "type": "==", 
      "operands": [{"signal": "tooltip._id"}, {"arg": "id"}]
    }
  ],

  "scales": [
    { "name": "xscale", "type": "ordinal", "range": "width",
      "domain": {"data": "table", "field": "category"} },
    { "name": "yscale", "range": "height", "nice": true,
      "domain": {"data": "table", "field": "amount"} }
  ],
  
  "axes": [
    {
      "type": "x",
      "title": "Reading Effort",
      "scale": "xscale",
      "properties": {
        "labels": {
          "font": {"value": "Karla"},
          "angle": {"value": 0},
          "fontSize": {"value": 10},
          "align": {"value": "center"},
          "baseline": {"value": "middle"},
          "dy": {"value": 5}
        },
        "title": {"font": {"value": "Karla"}}
      },
      "tickSizeEnd": 0
    },
    {
      "type": "y",
      "scale": "yscale",
      "properties": {
        "labels": {"font": {"value": "Karla"}},
        "title": {"font": {"value": "Karla"}}
      },
      "ticks": 3,
      "tickSizeEnd": 0
    }
  ],


  "marks": [
    {
      "type": "rect",
      "from": {"data":"table"},
      "properties": {
        "enter": {
          "x": {"scale": "xscale", "field": "category"},
          "width": {"scale": "xscale", "band": true, "offset": -1},
          "y": {"scale": "yscale", "field": "amount"},
          "y2": {"scale": "yscale", "value":0}
        },
        "update": { "fill": {"value": "LightSeaGreen"} },
        "hover": { "fill": {"value": "orangered"} }
      }
    },
    {
      "type": "text",
      
      "properties": {
        "enter": {
          "align": {"value": "center"},
          "fill": {"value": "#333"},
              "font": {"value": "Karla"}
        },
        "update": {
          "x": {"scale": "xscale", "signal": "tooltip.category"},
          "dx": {"scale": "xscale", "band": true, "mult": 0.5},
          "y": {"scale": "yscale", "signal": "tooltip.amount", "offset": -5},
          "text": {"signal": "tooltip.amount"},
          "fillOpacity": {
            "rule": [
              {
                "predicate": {"name": "tooltip", "id": {"value": null}},
                "value": 0
              },
              {"value": 1}
            ]
          }
        }
      }
    }
  ]
}
