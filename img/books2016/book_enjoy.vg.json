      "tickSize": 0,
      "tickPadding": 8
    },
    {"type": "y","scale": "val",      
      "properties": {
        "labels": {"font": {"value": "Karla"}},
        "title": {"font": {"value": "Karla"}}
      }
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "data": "table",
        "transform": [{"type": "facet","groupby": ["category"]}]
      },
      "properties": {
        "enter": {
          "x": {"scale": "cat","field": "key"},
          "width": {"scale": "cat","band": true}
        }
      },
      "scales": [
        {
          "name": "pos",
          "type": "ordinal",
          "range": "width",
          "domain": {"field": "year"}
        }
      ],
      "marks": [
        {
          "name": "bars",
          "type": "rect",
          "properties": {
            "enter": {
              "x": {"scale": "pos","field": "year"},
              "width": {"scale": "pos","band": true},
              "y": {"scale": "val","field": "value"},
              "y2": {"scale": "val","value": 0}
            },
            "update": {"fill": {"scale": "color","field": "year"}},
            "hover": {"fill": {"value": "orangered"}}
          }
        },
        {
          "type": "text",
          "from": {"mark": "bars"},
          "properties": {
            "enter": {
              "font": {"value": "Karla"},
              "y": {"field": "y"},
              "x": {"scale": "pos","field": "year"},
              "dx": {"scale": "pos","band": true, "field": "width"},
              "fill": {"value": "black"},
              "align": {"value": "center"},
              "baseline": {"value": "middle"},
              "text": {"field": "datum.value"}
            }
          }
        }

      ]
    }
  ]
