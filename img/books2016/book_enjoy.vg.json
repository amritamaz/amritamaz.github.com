      "padding": 0.2,
      "properties": {"labels": {"font": {"value": "Karla"}}}
    },
    {
      "name": "val",
      "type": "linear",
      "domain": {"data": "table","field": "value"},
      "range": "height",
      "round": true,
      "nice": true,
      "properties": {"labels": {"font": {"value": "Karla"}}}
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {"data": "table","field": "year"},
      "range": "category10"
