  ],
  "axes": [
    {
      "type": "x",
      "scale": "cat",
      "properties": {
        "labels": {
          "font": {"value": "Karla"},
          "angle": {"value": 0},
          "fontSize": {"value": 9},
          "align": {"value": "center"},
          "baseline": {"value": "middle"},
          "dy": {"value": 5}
