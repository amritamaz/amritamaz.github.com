{  "$schema": "https://vega.github.io/schema/vega-lite/v2.json",

  "data": {
    "url": "../../../img/books2017/books.csv"
  },
  "mark": "bar",
  "encoding": {
    "y": {
      "field": "Fiction/Non-fiction",
      "type": "nominal",
      "axis": {"title": ""}
    },
    "x": {
      "aggregate": "count",
      "field": "*",
      "type": "quantitative",
      "axis": {"title": "Count"}
    },
    "color": {
      "field": "Binding",
      "type": "nominal"
    }
  },
  "config": {
    "overlay": {
      "line": true
    },
    "scale": {
      "useUnaggregatedDomain": true
    },
    "axis": {
      "titleFont": "Karla",
      "labelFont": "Karla"
    },
    "legend": {
      "titleFont": "Karla",
      "labelFont": "Karla"
    }

  },
  "description": ""
}
